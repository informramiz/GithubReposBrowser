    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name=".ui.search.SearchFragment"
        android:label="blank"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_repoFragment"
            app:destination="@id/repoFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/repoFragment"
        android:name=".ui.repo.RepoFragment"
        android:label="Repo Fragment"
        tools:layout="@layout/fragment_repo"/>
</navigation>
